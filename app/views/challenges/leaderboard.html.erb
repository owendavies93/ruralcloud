<% ended = has_ended(@challenge) %>
<% if ended %>
  <h3>Leaderboard for Challenge #<%= @challenge.id %></h3>
  <table class="table table-striped">
    <tr>
      <th>User</th>
      <th>Compilations</th>
      <th>Failed Compilations</th>
      <th>Evaluations</th>
      <th>Failed Evaluations</th>
      <th>Code Length</th>
      <th>Lines</th>
      <th>Test Suite Score</th>
    </tr>

    <% @entries.each do |entry| %>
    <tr>
      <td><%= sanitize User.find(:first, :conditions => {id: entry.user_id}).email %></td>
      <td><%= entry.compilations %></td>
      <td><%= entry.failed_compilations %></td>
      <td><%= entry.evaluations %></td>
      <td><%= entry.failed_evaluations %></td>
      <td><%= entry.length %></td>
      <td><%= entry.lines %></td>
      <td>
          <%= entry.test_score %> / <%= @challenge.total_tests %> <%= link_to "Show Results", show_outcomes_path(@challenge.id, entry.user_id), {:remote => true, 'data-toggle' => 'modal', 'data-target' => "#outcomes-modal", 'data-backdrop' => true, 'data-keyboard' => true} %>
      </td>
    </tr>
    <% end %>

  <div class="modal hide fade" id="outcomes-modal">
    <div class="modal-header">
      <a href="#" class="close">Ã—</a>
      <h3>Fetching results...</h3>
    </div>
    <div class="modal-footer">&nbsp;</div>
  </div>

  </table>
<% else %>
  <p>The leaderboard for this challenge will appear here once the challenge has ended.</p>
<% end %>
