<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4>Test results for <%= User.find(@entry.user_id).email %> in Challenge #<%= @entry.challenge_id %></h4>
</div>
<div class="modal-body">
  <% indexer = 0 %>
  <% @tests.each do |test| %>
    <div class="well well-small">
      <h5>Test #<%= indexer + 1 %></h5>
      <p class="text-info">Status: <%= test.passed ? "Passed" : "Failed" %></p>
      <p>Input: <code><%= @inputs[indexer] %></code></p>
      <% if !test.passed %>
        <p class="text-success">Expected: <code><%= test.expected %></code></p>
        <p class="text-error">Received: <code><%= test.recieved %></code></p>
      <% else %>
        <p class="text-success">Output: <code><%= test.expected %></code></p>
      <% end %>
    </div>
    <% indexer += 1 %>
  <% end %>
</div>
