<h2>Register</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.email_field :email, :autofocus => true, :placeholder => "Email" %></div>

  <div><%= f.password_field :password, :placeholder => "Password" %></div>

  <div><%= f.password_field :password_confirmation, :placeholder => "Password Again" %></div>

  <div><%= f.submit "Sign up", :class => "btn" %></div>
<% end %>
