<% content_for :title, "Login" %>

<% if flash[:error] %>
  <div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class="alert alert-info">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
  </div>
<% end %>

<br/>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div><%= f.email_field :email, :autofocus => true, :placeholder => "Email" %></div>

  <div><%= f.password_field :password, :placeholder => "Password" %></div>

  <% if devise_mapping.rememberable? -%>
    <div>
        <%= f.label :remember_me, :class => "checkbox" do %>Remember Me<%= f.check_box :remember_me %>
        <% end %>
    </div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => "btn" %> or <%= link_to '<i class="icon-github"></i> Sign in with GitHub'.html_safe, user_omniauth_authorize_path(:github), :class => "btn" %>
</div>
<% end %>

  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
