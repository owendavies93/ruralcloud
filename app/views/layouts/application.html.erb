<!DOCTYPE html>
<html>
  <head>
    <title>Ruralcloud</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div id="wrap">
      <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>
            <a class="brand" href="/">Rural Cloud</a>
            <ul class="nav">
              <% if user_signed_in? %>
                <li><%= link_to "Challenges", challenges_path %></li>
                <% if current_user.try(:admin?) %>
                  <li><%= link_to 'Create Challenge', new_challenge_path %></li>
                <% end %>
              <% end %>
            </ul>
            <div class="nav-collapse pull-right">
              <ul class="nav">
                <% if user_signed_in? %>
                  <li><a href="#">Logged in as <%= sanitize current_user.email %></a></li>
                  <li><%= link_to "Logout", destroy_user_session_path %></li>
                <% else %>
                  <li><%= link_to "Login", new_user_session_path %></li>
                  <li><%= link_to "Register", new_user_registration_path %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <div class="container">
        <%= yield %>
      </div>

      <div id="push"></div>
    </div>

    <div id="footer">
      <div class="container">
        <p class="muted credit">Copyright 2013 Banter Brigade productions</p>
      </div>
    </div>
  </body>
</html>
